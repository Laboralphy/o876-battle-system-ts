{
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "./@types"],
        "target": "ESNext",
        "module": "CommonJS",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "./",
        "declaration": true,
        "emitDeclarationOnly": false
    },
    "include": ["src/**/*", "index.ts"]
}
